<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiPaletteCreator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:MauiPaletteCreator.Views"
    Title="MauiPaletteCreator"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate v:PgMain}"
        Route="PgMain" />
    <ShellContent
        Title="Project"
        ContentTemplate="{DataTemplate v:PgProject}"
        Route="PgProject" />
    <ShellContent
        Title="Colors"
        ContentTemplate="{DataTemplate v:PgColors}"
        Route="PgColors" />
    <ShellContent
        Title="View"
        ContentTemplate="{DataTemplate v:PgView}"
        Route="PgView" />
    <ShellContent
        Title="End"
        ContentTemplate="{DataTemplate v:PgEnd}"
        Route="PgEnd" />

</Shell>
